<h3><%= @step1 %>确认个人信息</h3>

<%= simple_form_for @profile do |f| %>

  <div class="group">
    <%= f.input :name, label: "姓名" %>
  </div>

  <div class="group">
    <%= f.input :gender, label: "性别" %>
  </div>

  <div class="group">
    <%= f.input :phonenumber, label: "手机号码" %>
  </div>

  <div class="group">
    <%= f.input :cnid, label: "身份证号" %>
  </div>


  <%= render_hiddle_line_id %>

  <%= f.submit "保存", data: { disable_with: "Submitting..." }, class: "btn btn-primary" %>

<% end %>
